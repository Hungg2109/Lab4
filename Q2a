# Write to a new file
new_file_name = "new_file.txt"
with open(new_file_name, "w") as new_file:
    new_file.write("Hung sieu dep zai.\n")
    new_file.write("Another line added to the new file.\n")
# Open file in write mode and write content into the file
py2_file_name = "py2_file.txt"
with open(py2_file_name, "w") as py2_file:
    py2_file.write("This content is written using Python 2 syntax.\n")
# 3. Write a list of lines to a file
lines_to_write = ["Line 1", "Line 2", "Line 3"]
existing_file_name = "existing_file.txt"
with open(existing_file_name, "a") as existing_file:
    for line in lines_to_write:
        existing_file.write(f"{line}\n")
